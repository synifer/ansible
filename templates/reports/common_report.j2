<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="~/ansible/css/main.css">
</head>
<body>
<table>
    <thead>
        <tr>
            <th>Hostname</th>
            <th>MGMT IP address</th>
            <th>Model Type</th>
            <th>Serial Number</th>
	    <th>IOS/IOS-XE</th>
            
            <th>Code Version</th>
        </tr>
    </thead>
    <tbody>
{% for device in groups['routers'] %}
        <tr>
            <td>{{hostvars[device]['ansible_net_hostname']}}</td>
            <td>{{hostvars[device]['ansible_net_interfaces']['GigabitEthernet3']['ipv4'][0]['address']}}</td>
            <td>{{hostvars[device]['ansible_net_model']}}</td>
            <td>{{hostvars[device]['ansible_net_serialnum']}}</td>
	    <td>{{hostvars[device]['ansible_net_iostype']}}</td>
            <td>{{hostvars[device]['ansible_net_version']}}</td>
	    <td>
        </tr>
{% endfor %}
    </tbody>
</table>

</body>
</html>
